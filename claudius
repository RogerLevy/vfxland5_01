#!/bin/bash

# claudius - Run claude with system prompt from ~/.claude/CLAUDIUS.md
# Usage: claudius [claude arguments...]

CLAUDIUS_FILE="./CLAUDIUS.md"

if [[ ! -f "$CLAUDIUS_FILE" ]]; then
    echo "Error: $CLAUDIUS_FILE not found" >&2
    exit 1
fi

# Run claude with --append-system-prompt and pass through all arguments
# Read file content into variable to avoid quote issues
CONTENT=$(cat "$CLAUDIUS_FILE")
claude --append-system-prompt "$CONTENT" "$@"