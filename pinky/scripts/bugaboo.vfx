class: bugaboo
    actor derive

: -+  2 rnd 2 * 1 - ;
: somewhere  320 240 2rnd ;


bugaboo :: init
    1000 rnd ts + bmp !
    -+ -+ 2>. vx 2!
    act>
        gamelife @ 31 and 0= if 
            4 rnd 24 << bmp @ $FFFF and or bmp !
        then
        <up> held? if -1. y +! then 
        x @ 0 320. within not if vx @ negate vx ! then
        y @ 0 240. within not if vy @ negate vy ! then ;
        
: ?bugaboo  somewhere at bugaboo one drop ;

class;
