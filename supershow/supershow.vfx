\ ------------------------------------------------------------------------------
\ Supershow
\
\ minimalist 2D game engine with actors, CRT effect, sample playback, 
\ and tilemaps.
\ ------------------------------------------------------------------------------

\ isolation on

\ =============================================================================
\ Dependencies
\ =============================================================================

MODULE %idir%/checks.vfx           \ Validations
MODULE %idir%/mode.vfx             \ Game modes w/ separate logic and rendering
MODULE %idir%/tweak.vfx            \ Persistent variable control
MODULE %idir%/waveplay.vfx         \ Audio engine
MODULE %idir%/utilities.vfx        \ Math helpers, audio, and misc utilities
MODULE %idir%/traits.vfx           \ Object traits
MODULE %idir%/asset.vfx            \ Base asset class
MODULE %idir%/shader.vfx           \ Shaders 
MODULE %idir%/crt.vfx              \ CRT shader

\ =============================================================================
\ Actor system
\ =============================================================================

MODULE %idir%/actor.vfx
MODULE %idir%/stage.vfx            \ Actor/sprite system
MODULE %idir%/timer.vfx

\ =============================================================================
\ Bitmaps and tilemaps
\ =============================================================================

MODULE %idir%/bitmap.vfx           \ Bitmaps
MODULE %idir%/tileset.vfx          \ Tilesets
MODULE %idir%/tilemap2.vfx         \ Tilemap rendering & Tileset class
MODULE %idir%/sprites.vfx          \ Sprite animation (MODULEs %tileset)

\ =============================================================================
\ Tilemap collision
\ =============================================================================

MODULE %idir%/udlr.vfx             \ Movement utilities
MODULE %idir%/tmcol.vfx            \ Tilemap collision detection
MODULE %idir%/tread.vfx            \ Tilemap data reading

\ =============================================================================
\ Convenience facilities
\ =============================================================================

MODULE %idir%/autoload.vfx

\ include %idir%/persist.vfx
\ include %idir%/scene.vfx            \ Scene management
\ include %idir%/autoclass.vfx        \ Auto-generate classes from bitmaps

MODULE %idir%/runtime.vfx
