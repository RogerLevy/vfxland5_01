1 constant SCENE_FORMAT_VERSION

class: scene  
    is-a _totem
    version: SCENE_FORMAT_VERSION
    extension: scn
    default-dir: dat/scn
class;


class: actor
    prop owner <ref actor       \ actors with owners are discarded
                                \ it is up to the owner actor to recreate
class;

: own ( actor - actor )
    me over -> owner ! ;

actor :: serializable? ( - flag )
    en @   owner @ 0= and ; 

scene :: _keep ( - )
    \ save actors on stage to disk
    ser>
        me serbin,
        actors ['] serializable? sermulti, ;

|| : actor-instance ( class - actor )
    dup actor is? not if
        body> >name count
        f" Class %s does not inherit from ACTOR." -1 -rot .abort 
    then 
    one ;

|| : deser-actors+ ( a - a' ) 
    ['] actor-instance desmulti+ ;

|| : deser-scene+ ( a - a' )
    ['] into-me desbin+ ;

scene :: load ( - )
    \ load actors from disk to stage
    des> deser-scene+ deser-actors+ ;

scene :: _intake ( - )
    des> deser-scene+ ;

: +scene ( <name> - scene ) 
    scene +totem ;