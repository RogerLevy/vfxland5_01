1 constant SCENE_FORMAT_VERSION

class: scene
    is-a _totem
    is-a loadable
    :: gen-path ( name len - fn len )
        f" dat/scn/%s.scn" ;
class;

: deser-actor ( a - a' )
    ['] one desbin ;

|| : enabled?  -> en @ ;

scene :: save-content ( - )
    \ save actors on stage to disk
    temp[ 
        SCENE_FORMAT_VERSION ,
        me serbin
        actors ['] enabled? ['] serbin sermulti
    temp] srcpath count ['] write catch abort" File write error" ;

: load-scene-data ( a - )
    @+ dup SCENE_FORMAT_VERSION <> if
        -1 swap f" SCENE:LOAD >> Unsupported scene format version %n" .abort
    else drop then 
    ['] into-me desbin
    ['] one ['] desbin desmulti 
    drop ;

scene :: load ( - )
    \ load actors from disk to stage
    srcpath count ['] file@ catch nip abort" File read error"
    dup load-scene-data
    free throw ;

: >scene ( <name> - scene ) 
    scene ?totem dup manifest ;