class: scene
    is-a asset
    is-a loadable
class;

: deser-actor ( a - a' )
    ['] one desbin ;

|| : enabled?  -> en @ ;

scene :: save-content ( - )
    \ save actors on stage to disk
    temp[ 
        ['] enabled? ['] serbin sermulti
    temp] srcpath count write ;

scene :: load ( - )
    \ load actors from disk to stage
    srcpath count ['] file@ nip catch abort" File read error"
    dup ['] one ['] desbin desmulti 
    free throw ;

: >scene ( <name> - ) 
    scene ?asset manifest ;