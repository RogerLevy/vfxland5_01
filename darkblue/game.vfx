\ Global commands
: *ship
    ship% one [[ me actor# turret% one 's n1 ! ]] ;

: *player ( - )
    *ship ;

: (reset) ( - )
    0 next# ! actives> you me = ?exit unload ;

: reset ( - )
    (reset)
    50 gameh 2 / at *player
    100 energy ! ;

: retry ( - )
    blank blank blank
    1.0 to starfield-speed
    eval" run test1" ;

\ Game
: scale>  +m 0e 0e 2p>f 0e transform r> execute -m ;
: render  backdrop .75 .75 scale> starfield hud sprites animate ;
: think  step ;
: game  show> think render ;
: boot-darkblue  init-supershow title ;

\ Integrate
' boot-darkblue is boot
init-supershow 