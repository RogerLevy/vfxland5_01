variable attr

: attribute ( n - )
    \ $0000BBFF = F = foreground, B = background
    attr ! ;

aligned-page attr-stack
variable attr-sp
attr-stack attr-sp !

: push-attribute ( attr-n -- )
    attr @ attr-sp @ !
    4 attr-sp c+! 
    attribute ;

: pop-attribute ( -- )
    -4 attr-sp c+! 
    attr-sp @ @ attr ! ;

\ Initialize everything to 7 (light grey)
:noname 256 cell / for 7 push-attribute loop ; execute

: atype ( a len attr-n - )
    push-attribute type pop-attribute ;
