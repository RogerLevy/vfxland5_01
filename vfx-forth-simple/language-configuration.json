{
  "wordPattern": "[^\\s]+",
  "comments": {
    "lineComment": "\\"
  },
  "brackets": [
    ["if", "then"],
    ["if", "endif"],
    ["begin", "until"],
    ["begin", "again"],
    ["begin", "repeat"],
    ["do", "loop"],
    ["?do", "loop"],
    ["do", "+loop"],
    ["?do", "+loop"],
    ["for", "loop"],
    ["for", "+loop"],
    ["case", "endcase"],
    ["of", "endof"],
    ["[[", "]]"],
    ["[if]", "[then]"],
  ],
  "autoClosingPairs": [],
  "surroundingPairs": [],
  "indentationRules": {
    "increaseIndentPattern": "^$Never$Match^",
    "decreaseIndentPattern": "^$Never$Match^"
  },
  "onEnterRules": [
    {
      "beforeText": "^:\\s+\\S+.*$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": ";\\s*(\\\\.*)?$",
      "action": { "indent": "outdent" }
    },
    {
      "beforeText": "^\\s*$",
      "previousLineText": ";\\s*(\\\\.*)?$",
      "action": { "indent": "none" }
    }
  ]
}