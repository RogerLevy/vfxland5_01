    brainboy.ts 0 tile bmp !
    act>
        0 0 vx 2!
        <left> held? if -1. vx ! then
        <right> held? if 1. vx ! then
        <up> held? if -1. vy ! then
        <down> held? if 1. vy ! then 
    physics> 
        hit-map ;